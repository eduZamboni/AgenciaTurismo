@page "{id:int}"
@model AgenciaTurismo.Pages.ClienteDetailsModel
@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2>Detalhes do Cliente</h2>

@if (Model.Cliente != null)
{
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Cliente.Id</dd>
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Cliente.Nome</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Cliente.Email</dd>
    </dl>
}
else
{
    <div class="alert alert-warning">Cliente n√£o encontrado.</div>
}
